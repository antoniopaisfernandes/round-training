{
    "private": true,
    "scripts": {
        "dev": "npm run development",
        "development": "mix",
        "watch": "mix watch",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "prod": "npm run production",
        "production": "mix --production",
        "cypress:run": "node_modules/.bin/cypress run --project ./tests/Acceptance",
        "cypress:open": "node_modules/.bin/cypress open --project ./tests/Acceptance",
        "cypress:prep": "node tests/Acceptance/setup.js",
        "cypress:teardown": "node tests/Acceptance/teardown.js",
        "cypress:test": "npm run cypress:prep && (((concurrently \"npx wait-on tcp:8000 && npm run cypress:run\" --kill-others \"php artisan serve\" --success first) && npm run cypress:teardown) || (npm run cypress:teardown && bash -c 'false'))"
    },
    "dependencies": {
        "@mdi/font": "^5.8.55",
        "axios": "^0.21",
        "date-fns": "^2.16.1",
        "file-saver": "^2.0.5",
        "js-file-download": "^0.4.12",
        "lodash-es": "^4.17.13",
        "tailwindcss": "^2.0.2",
        "vue": "^2.6.12",
        "vue-api-query": "^1.8.2",
        "vuetify": "^2.4.0"
    },
    "devDependencies": {
        "@babel/plugin-proposal-class-properties": "^7.12.1",
        "autoprefixer": "^10.1.0",
        "browser-sync": "^2.26.13",
        "browser-sync-webpack-plugin": "^2.3.0",
        "concurrently": "^5.3.0",
        "cross-env": "^7.0.3",
        "cypress": "^6.2.0",
        "laravel-mix": "6.0.0",
        "laravel-mix-purgecss": "^6.0.0",
        "postcss": "^8.2.0",
        "resolve-url-loader": "^3.1.2",
        "sass": "^1.30.0",
        "sass-loader": "^10.1.0",
        "vue-loader": "^15.9.6",
        "vue-template-compiler": "^2.6.12",
        "wait-on": "^5.2.1"
    }
}
